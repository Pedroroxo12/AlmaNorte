    <p class="quote-author">— Equipa AlmaNorte</p>
</div>

<!-- Timeline Section -->
<div class="timeline-section">
    <div class="timeline-container">
        <div class="timeline-logo">
            <img src="/assets/images/Logotipo.png" alt="AlmaNorte">
        </div>
        
        <img src="/assets/images/40654 1.png" class="timeline-icon" style="top: 200px;" alt="Produtores">
        <img src="/assets/images/bwink_ind_02_single_08 1.png" class="timeline-icon" style="top: 400px;" alt="Digital">
        
        <div class="timeline-item">
            <h3>2023</h3>
            <h4>O COMEÇO</h4>
