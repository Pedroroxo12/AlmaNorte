        height: 250px;
        overflow: hidden;
    }
    .recent-card .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .recent-card .card-content {
        padding: 20px 25px;
    }
    .recent-card h3 {
        font-size: 14px;
        font-weight: 700;
        margin-bottom: 12px;
        text-transform: uppercase;
        color: #000;
        line-height: 1.4;
    }
    .recent-card p {
        font-size: 11px;
        color: #666;
        margin-bottom: 15px;
        line-height: 1.6;
    }
    .recent-card .read-link {
        color: #000;
        font-size: 11px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-weight: 500;
    }
    @media (max-width: 900px) {
        .blog-about .container {
            grid-template-columns: 1fr;
        }
        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

