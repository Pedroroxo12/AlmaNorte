<style>
    .blog-page {
        padding-top: 160px;
        font-family: 'Montserrat', sans-serif;
        color: #2d1c1c;
    }
    .blog-hero {
        padding: 40px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }
    .blog-hero h1 {
        font-size: 32px;
        letter-spacing: 0.5px;
        margin-bottom: 40px;
        text-transform: uppercase;
    }
    .featured-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
    }
    .featured-card {
        background: #593232;
        border-radius: 12px;
        overflow: hidden;
        min-height: 250px;
        display: flex;
        flex-direction: column;
        position: relative;
        padding: 20px;
        color: white;
    }
    .featured-card .tags {
        display: flex;
        gap: 8px;
        margin-bottom: 12px;
    }
    .featured-card .tag {
        background: #7d5454;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        text-transform: uppercase;
    }
    .featured-card h3 {
        font-size: 18px;
        margin-bottom: 12px;
        line-height: 1.3;
    }
    .featured-card p {
        font-size: 13px;
        line-height: 1.6;
        opacity: 0.95;
    }
    /* Card image blocks */
    .card-image {
        width: 100%;
        height: 180px;
        background: #4a2a2a;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }
    .thumb {
