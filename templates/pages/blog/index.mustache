        height: 90px;
        border-radius: 10px;
        overflow: hidden;
        flex-shrink: 0;
    }
    .side-post .post-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .side-post .post-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .side-post h4 {
        font-size: 12px;
        font-weight: 700;
        margin: 0;
        text-transform: uppercase;
        color: #000;
        line-height: 1.3;
    }
    .side-post .meta {
        font-size: 10px;
        color: #999;
        margin: 0;
    }
    .side-post .read-link {
        color: #000;
        font-size: 10px;
        text-decoration: none;
