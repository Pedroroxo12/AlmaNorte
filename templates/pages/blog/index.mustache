        flex-wrap: wrap;
        gap: 12px;
    }
    .blog-tags .tag-btn {
        background: #593232;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 20px;
        font-size: 12px;
        cursor: pointer;
    }
    .blog-section {
        padding: 60px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }
    .blog-section h2 {
        font-size: 26px;
        margin-bottom: 30px;
        text-transform: uppercase;
    }
    .posts-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
    }
    .main-post {
        background: #593232;
        border-radius: 12px;
        min-height: 300px;
        padding: 20px;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }
    .main-post h3 {
        font-size: 20px;
        margin-bottom: 10px;
    }
    .main-post p {
        font-size: 13px;
        opacity: 0.9;
        margin-bottom: 15px;
    }
    .main-post .read-link {
        color: white;
        font-size: 12px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .side-posts {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    .side-post {
        background: #593232;
        border-radius: 12px;
        padding: 16px;
        color: white;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .side-post h4 {
        font-size: 14px;
        margin-bottom: 8px;
    }
    .side-post .meta {
        font-size: 11px;
        opacity: 0.8;
        margin-bottom: 10px;
    }
    .side-post .read-link {
        color: white;
        font-size: 11px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    .recent-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
    }
    .recent-card {
        background: #593232;
        border-radius: 12px;
        min-height: 200px;
        padding: 20px;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }
    .recent-card h3 {
        font-size: 16px;
        margin-bottom: 10px;
    }
    .recent-card p {
        font-size: 12px;
        opacity: 0.9;
        margin-bottom: 12px;
    }
    .recent-card .read-link {
        color: white;
        font-size: 11px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    @media (max-width: 900px) {
        .blog-about .container {
            grid-template-columns: 1fr;
        }
        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

