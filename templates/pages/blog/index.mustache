        height: 300px;
        overflow: hidden;
    }
    .main-post .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .main-post .post-content {
        padding: 20px 25px;
    }
    .main-post h3 {
        font-size: 14px;
        font-weight: 700;
        margin-bottom: 12px;
        text-transform: uppercase;
        color: #000;
        line-height: 1.4;
    }
    .main-post p {
        font-size: 11px;
        color: #666;
        margin-bottom: 15px;
        line-height: 1.6;
    }
    .main-post .read-link {
        color: #000;
        font-size: 11px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
    }
    .side-posts {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    .side-post {
        background: white;
        border-radius: 15px;
        overflow: hidden;
