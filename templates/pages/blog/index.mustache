    }
    .blog-about .container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: start;
    }
    .blog-about h2 {
        font-size: 26px;
        margin-bottom: 20px;
        text-transform: uppercase;
    }
    .blog-about p {
        font-size: 13px;
        line-height: 1.7;
        margin-bottom: 20px;
    }
    .blog-about .btn {
        background: #593232;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 12px;
        text-transform: uppercase;
        cursor: pointer;
    }
    .blog-tags {
