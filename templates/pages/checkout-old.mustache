    <script>
        // Load cart data into checkout summary
        function loadCheckoutSummary() {
            const cart = JSON.parse(localStorage.getItem('almaNorteCart')) || [];
            const checkoutItems = document.getElementById('checkout-items');
            const subtotalElement = document.getElementById('checkout-subtotal');
            const totalElement = document.getElementById('checkout-total');

            if (cart.length === 0) {
                checkoutItems.innerHTML = '<p style="text-align: center; color: #666;">Carrinho vazio</p>';
                subtotalElement.textContent = '0.00€';
                totalElement.textContent = '0.00€';
                return;
            }

            let subtotal = 0;
            let html = '';

            cart.forEach(item => {
                const price = parseFloat(item.price.replace('€', '').replace(',', '.')) || 0;
                const quantity = item.quantity || 1;
                const itemTotal = price * quantity;
                subtotal += itemTotal;

                html += `
                    <div style="display: flex; justify-content: space-between; margin-bottom: 10px; font-size: 13px;">
                        <span>${item.name} x ${quantity}</span>
                        <span>${itemTotal.toFixed(2)}€</span>
                    </div>
                `;
            });

            checkoutItems.innerHTML = html;
            subtotalElement.textContent = `${subtotal.toFixed(2)}€`;
            totalElement.textContent = `${subtotal.toFixed(2)}€`;
        }

        document.addEventListener('DOMContentLoaded', loadCheckoutSummary);

        // Save shipping data on submit
        document.getElementById('shippingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const shippingData = Object.fromEntries(formData.entries());
            localStorage.setItem('shippingData', JSON.stringify(shippingData));
            window.location.href = 'payment.html';
        });
    </script>
