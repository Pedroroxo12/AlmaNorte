    <script>
        function loadFavoritesOffcanvas() {
            const favoritesStr = localStorage.getItem('almaNorteFavorites');
            const favorites = favoritesStr ? JSON.parse(favoritesStr) : [];
            const container = document.getElementById('favorites-container');
            const countEl = document.getElementById('favorites-count');
            
            countEl.textContent = favorites.length;
            
            if (favorites.length === 0) {
                container.innerHTML = '<div class="favorites-empty">Nenhum favorito adicionado</div>';
                return;
            }
            
            container.innerHTML = favorites.map(item => `
                <div class="favorite-item">
                    <img src="${item.image}" alt="${item.name}">
                    <div class="favorite-item-info">
                        <div class="favorite-item-name">${item.name}</div>
                        <div class="favorite-item-producer">${item.producer}</div>
                        <div class="favorite-item-price">${item.price}</div>
                        <button class="favorite-item-button" onclick="addToCart('${item.name}', '${item.price}', '${item.image}')">Adicionar ao Carrinho</button>
                    </div>
                    <button class="favorite-item-close" onclick="removeFavorite('${item.name}')">&times;</button>
                </div>
            `).join('');
        }
        
        function removeFavorite(productName) {
            const favoritesStr = localStorage.getItem('almaNorteFavorites');
            let favorites = favoritesStr ? JSON.parse(favoritesStr) : [];
            favorites = favorites.filter(item => item.name !== productName);
            localStorage.setItem('almaNorteFavorites', JSON.stringify(favorites));
            loadFavoritesOffcanvas();
        }
        
        function addToCart(name, price, image) {
            const cartStr = localStorage.getItem('almaNorteCart');
            let cart = cartStr ? JSON.parse(cartStr) : [];
            cart.push({ name, price, image, quantity: 1 });
            localStorage.setItem('almaNorteCart', JSON.stringify(cart));
            alert('Produto adicionado ao carrinho!');
        }
        
        // Carregar favoritos quando o offcanvas abre
        document.addEventListener('DOMContentLoaded', function() {
            const favoritesOffcanvas = document.getElementById('favoritesOffcanvas');
            if (favoritesOffcanvas) {
                favoritesOffcanvas.addEventListener('show.bs.offcanvas', loadFavoritesOffcanvas);
            }
        });
    </script>
