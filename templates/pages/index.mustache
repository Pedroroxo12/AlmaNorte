            title: "Consultora",
            stars: 5
        },
        {
            text: "Recomendo fortemente! Os produtores são confiáveis e os produtos são sempre frescos. Fantástica iniciativa que apoia a agricultura local.",
            name: "CARLOS MENDES",
            title: "Agricultor",
            stars: 4
        }
    ];

    const producers = [
        {
            title: "OS NOSSOS PRODUTORES",
            subtitle: "DESCOBRE COMO SÃ TRATADOS OS NOSSOS PRODUTOS",
            description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.",
            image: "/assets/images/young-farmer-taking-care-his-business 1.png",
            buttonText: "Tudo sobre os nossos Produtores",
            buttonLink: "/producers.html",
            type: "producer"
        },
        {
            title: "EVENTOS FUTUROS",
            subtitle: "EXPLORA OS PRÓXIMOS EVENTOS",
            description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
            image: "/assets/images/Foto de capa.jpeg",
            buttonText: "Descobre o nosso Blog",
            buttonLink: "/blog/index.html",
            type: "event"
        },
        {
            title: "OFERTAS ESPECIAIS",
            subtitle: "DESCOBRE AS MELHORES OFERTAS",
            description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
            image: "/assets/images/Foto de capa.jpeg",
            buttonText: "As melhores ofertas",
            buttonLink: "/gallery-api-1.html",
            type: "offer"
        }
    ];

    function showTestimonial(index) {
        const testimonial = testimonials[index];
        let starsHTML = '';
        for (let i = 0; i < 5; i++) {
            if (i < testimonial.stars) {
                starsHTML += '<i class="fas fa-star"></i>';
            } else {
                starsHTML += '<i class="far fa-star"></i>';
            }
        }
        
        const card = document.getElementById('testimonial-1');
        card.innerHTML = `
            <div class="testimonial-icon">
                <i class="fas fa-user-circle"></i>
            </div>
            <p class="testimonial-text">${testimonial.text}</p>
            <div class="stars">${starsHTML}</div>
            <p class="client-name">${testimonial.name}</p>
            <p class="client-title">${testimonial.title}</p>
        `;
    }

    function showProducer(index) {
        const producer = producers[index];
        const producerContainer = document.getElementById('producer-container');
        const mainCard = document.querySelector('.producer-main-card');
        
        if (producer.type === 'offer') {
            mainCard.style.border = '3px solid #4a90e2';
            mainCard.style.borderRadius = '25px';
            producerContainer.innerHTML = `
                <div style="text-align: left; width: 100%;">
                    <div style="display: flex; gap: 30px; align-items: center;">
                        <div style="flex: 0 0 250px;">
                            <img src="http://localhost/AlmaNorte${producer.image}" alt="${producer.subtitle}" style="width: 250px; height: 350px; object-fit: cover; border: 3px solid white;">
                        </div>
                        <div style="flex: 1;">
                            <p style="font-size: 11px; letter-spacing: 2px; margin-bottom: 10px; text-transform: uppercase; color: white;">${producer.title}</p>
                            <h3 style="font-size: 28px; letter-spacing: 2px; margin-bottom: 25px; font-weight: 300; text-transform: uppercase; color: white;">${producer.subtitle}</h3>
                            <p style="font-size: 13px; line-height: 1.8; margin-bottom: 30px; color: white;">${producer.description}</p>
                            <a href="http://localhost/AlmaNorte${producer.buttonLink}" style="background-color: transparent; color: white; border: 2px solid white; padding: 12px 40px; text-decoration: none; display: inline-block; transition: all 0.3s; font-size: 14px;">${producer.buttonText}</a>
                        </div>
                    </div>
                </div>
            `;
        } else if (producer.type === 'event') {
            mainCard.style.border = 'none';
            mainCard.style.borderRadius = '25px';
            producerContainer.innerHTML = `
                <div style="text-align: left; width: 100%;">
                    <p style="font-size: 11px; letter-spacing: 2px; margin-bottom: 10px; text-transform: uppercase; color: white;">${producer.title}</p>
                    <h3 style="font-size: 24px; letter-spacing: 2px; margin-bottom: 25px; font-weight: 300; text-transform: uppercase; color: white;">${producer.subtitle}</h3>
                    <div style="display: flex; gap: 30px; align-items: flex-start;">
                        <div style="flex: 0 0 250px;">
                            <img src="http://localhost/AlmaNorte${producer.image}" alt="${producer.subtitle}" style="width: 250px; height: 250px; object-fit: cover; border: 3px solid white;">
                        </div>
                        <div style="flex: 1;">
                            <p style="font-size: 13px; line-height: 1.8; margin-bottom: 25px; color: white;">${producer.description}</p>
                            <a href="http://localhost/AlmaNorte${producer.buttonLink}" style="background-color: transparent; color: white; border: 2px solid white; padding: 12px 40px; text-decoration: none; display: inline-block; transition: all 0.3s; font-size: 14px;">${producer.buttonText}</a>
                        </div>
                    </div>
                </div>
            `;
        } else {
            mainCard.style.border = 'none';
            mainCard.style.borderRadius = '25px';
            producerContainer.innerHTML = `
                <div style="text-align: left; width: 100%;">
                    <div style="display: flex; gap: 30px; align-items: flex-start;">
                        <div style="flex: 0 0 250px;">
                            <img src="http://localhost/AlmaNorte${producer.image}" alt="${producer.subtitle}" style="width: 250px; height: 250px; object-fit: cover; border: 3px solid white;">
                        </div>
                        <div style="flex: 1;">
                            <p style="font-size: 13px; line-height: 1.8; margin-bottom: 25px; color: white;">${producer.description}</p>
                        </div>
                    </div>
                    <div style="text-align: center; margin-top: 30px;">
                        <a href="http://localhost/AlmaNorte${producer.buttonLink}" style="background-color: transparent; color: white; border: 2px solid white; padding: 12px 40px; text-decoration: none; display: inline-block; transition: all 0.3s; font-size: 14px;">${producer.buttonText}</a>
                    </div>
                </div>
            `;
        }
    }

    function nextTestimonial() {
        currentTestimonial = (currentTestimonial + 1) % testimonials.length;
        showTestimonial(currentTestimonial);
    }
    
    function previousTestimonial() {
        currentTestimonial = (currentTestimonial - 1 + testimonials.length) % testimonials.length;
        showTestimonial(currentTestimonial);
    }

    function nextProducer() {
        currentProducer = (currentProducer + 1) % producers.length;
        showProducer(currentProducer);
    }

    function previousProducer() {
        currentProducer = (currentProducer - 1 + producers.length) % producers.length;
        showProducer(currentProducer);
    }

    // Inicializar
    showTestimonial(0);
    showProducer(0);
</script>

