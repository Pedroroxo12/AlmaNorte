{{>header}}
<main>
<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">{{hero.title}}</h1>
        <p class="hero-subtitle">{{hero.subtitle}}</p>
        <div class="hero-buttons">
            <a href="./gallery-api-1.html" class="btn btn-primary">{{hero.buttons.projects}}</a>
            <a href="./contact.html" class="btn btn-secondary">{{hero.buttons.contact}}</a>
        </div>
    </div>
    <div class="hero-image">
        <img src="/assets/images/gallery/image (1).png" alt="Produtos Tradicionais">
    </div>
</section>

<section class="featured-products">
    <div class="container">
        <h2 class="section-title">Produtos em Destaque</h2>
        <div class="products-grid">
            {{#featured_products}}
            <div class="product-card">
                <img src="{{image}}" alt="{{name}}">
                <h3>{{name}}</h3>
                <p class="price">{{price}}</p>
                <button class="btn btn-outline-primary favorite-btn"><i class="fas fa-heart"></i></button>
                <button class="btn btn-primary add-to-cart-btn">Adicionar ao Carrinho</button>
            </div>
            {{/featured_products}}
        </div>
    </div>
</section>

<section class="producers">
    <div class="container">
        <h2 class="section-title">Os Nossos Produtores</h2>
        <div class="producers-grid">
            {{#producers}}
            <div class="producer-card">
                <img src="{{image}}" alt="{{name}}">
                <h3>{{name}}</h3>
                <p>{{description}}</p>
                <a href="/producer.html?id={{name}}" class="btn btn-secondary">Ver Produtor</a>
            </div>
            {{/producers}}
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <h2>{{cta.title}}</h2>
        <p>{{cta.description}}</p>
        <a href="./contact.html" class="btn btn-primary">{{cta.button}}</a>
    </div>
</section>
</main>
{{>footer}}