    <script>
        // Load shipping information
        function loadShippingInfo() {
            const shippingData = JSON.parse(localStorage.getItem('shippingData')) || {};
            
            const displayDiv = document.getElementById('shipping-display');
            const firstName = shippingData.firstName || '';
            const lastName = shippingData.lastName || '';
            const phone = shippingData.phone || '';
            const address = shippingData.address || '';
            const apartment = shippingData.apartment ? `, ${shippingData.apartment}` : '';
            const city = shippingData.city || '';
            const country = shippingData.country || '';
            const postal = shippingData.postal || '';

            displayDiv.innerHTML = `
                <strong>${firstName} ${lastName}</strong><br>
                ${phone ? `+${phone}<br>` : ''}
                ${address}${apartment}<br>
                ${city}${city && country ? ', ' : ''}${country} ${postal}
            `;
        }
        
        // Load order summary
        function loadOrderSummary() {
            const cart = JSON.parse(localStorage.getItem('almaNorteCart')) || [];
            const shippingData = JSON.parse(localStorage.getItem('shippingData')) || {};
            const orderItemsContainer = document.getElementById('order-items');
            
            if (cart.length === 0) {
                orderItemsContainer.innerHTML = '<p style="text-align: center; color: #666;">Carrinho vazio</p>';
                document.getElementById('subtotal').textContent = '0,00 €';
                updateTotal();
                return;
            }
            
            let subtotal = 0;
            let html = '';
            
            cart.forEach(item => {
                const priceValue = parseFloat(item.price.replace('€', '').replace('â‚¬', '').replace(',', '.').trim());
                const itemTotal = priceValue * (item.quantity || 1);
                subtotal += itemTotal;
                
                html += `
                    <div class="summary-item">
                        <img src="${item.image}" alt="${item.name}">
                        <div class="summary-item-details" style="flex: 1;">
                            <h6>${item.name}</h6>
                            <p>${item.producer || 'Produtor'}</p>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <span style="font-family: 'Montserrat', sans-serif; font-size: 10px;">Qty: ${item.quantity || 1}</span>
                                <span style="font-family: 'Montserrat', sans-serif; font-size: 11px; font-weight: 600;">${itemTotal.toFixed(2).replace('.', ',')} €</span>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            orderItemsContainer.innerHTML = html;
            document.getElementById('subtotal').textContent = subtotal.toFixed(2).replace('.', ',') + ' €';
            
            const shippingCost = parseFloat(shippingData.shippingCost || 4.90);
            document.getElementById('shipping-cost').textContent = shippingCost.toFixed(2).replace('.', ',') + ' €';
            
            const total = subtotal + shippingCost;
            document.getElementById('total').textContent = total.toFixed(2).replace('.', ',') + ' €';
        }
        
        // Handle form submission
        document.getElementById('payment-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success overlay
            document.getElementById('successOverlay').classList.add('active');
            
            // Clear data after showing success
            localStorage.removeItem('almaNorteCart');
            localStorage.removeItem('shippingData');
        });
        
        // Load on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadShippingInfo();
            loadOrderSummary();
        });
        
        function renderFavoritesOffcanvas(){const favorites=JSON.parse(localStorage.getItem('almaNorteFavorites'))||[];const c=document.getElementById('favorites-items-offcanvas');const ct=document.getElementById('favorites-count-offcanvas');ct.textContent=favorites.length;if(favorites.length===0){c.innerHTML='<p style="text-align:center;color:#666;font-family:Montserrat,sans-serif;font-size:14px;padding:20px;">Sem favoritos</p>';return;}let h='';favorites.forEach((item,index)=>{h+=`<div style="display:flex;gap:15px;margin-bottom:20px;padding-bottom:20px;border-bottom:1px solid #eee;position:relative;"><button onclick="removeFromFavorites(${index})" style="position:absolute;top:0;right:0;border:none;background:none;color:#666;cursor:pointer;font-size:18px;">×</button><img src="${item.image}" style="width:80px;height:80px;object-fit:contain;border:1px solid #e0e0e0;padding:5px;"><div style="flex:1;"><h6 style="font-family:'Montserrat',sans-serif;font-size:12px;font-weight:600;margin:0 0 4px 0;text-transform:uppercase;">${item.name}</h6><p style="font-family:'Montserrat',sans-serif;font-size:10px;color:#666;margin:0 0 8px 0;">${item.producer||'Produtor'}</p><p style="font-family:'Montserrat',sans-serif;font-size:13px;font-weight:600;margin:0 0 12px 0;">${item.price}</p><button onclick="addFavoriteToCart('${item.id}')" style="width:100%;background:#593232;color:white;border:none;padding:8px;font-family:'Montserrat',sans-serif;font-size:10px;font-weight:600;text-transform:uppercase;cursor:pointer;">ADICIONAR AO CARRINHO</button></div></div>`;});c.innerHTML=h;}
        function removeFromFavorites(i){let f=JSON.parse(localStorage.getItem('almaNorteFavorites'))||[];f.splice(i,1);localStorage.setItem('almaNorteFavorites',JSON.stringify(f));renderFavoritesOffcanvas();}
        function addFavoriteToCart(id){const f=JSON.parse(localStorage.getItem('almaNorteFavorites'))||[];const item=f.find(fav=>fav.id===id);if(item){let cart=JSON.parse(localStorage.getItem('almaNorteCart'))||[];const ei=cart.findIndex(c=>c.id===item.id);if(ei>-1){cart[ei].quantity=(cart[ei].quantity||1)+1;}else{cart.push({...item,quantity:1});}localStorage.setItem('almaNorteCart',JSON.stringify(cart));alert('Produto adicionado ao carrinho!');}}
        var fo=document.getElementById('favoritesOffcanvas');if(fo){fo.addEventListener('show.bs.offcanvas',()=>renderFavoritesOffcanvas());}
