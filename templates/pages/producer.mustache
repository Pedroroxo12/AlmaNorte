        <script>
            // Get producer name from URL
            const urlParams = new URLSearchParams(window.location.search);
            const producerName = urlParams.get('name') || 'RUI LOURENÇO';
            
            // Producer data
            const producersData = {
                'RUI LOURENÇO': {
                    name: 'RUI LOURENÇO',
                    subtitle: 'PRODUTOR DE MEL',
                    heroImage: 'http://localhost/AlmaNorte/assets/images/male-beekeeper-taking-out-honeycomb-with-bees-from-beehive-his-apiary 1.png',
                    about: 'Rui Lourenço nasceu no Mogadouro, de onde saiu para conhecer o mundo. Em 2010 retornou, dedicando-se à apicultura biológica. Desenvolveu o seu trabalho em Trás-os-Montes com o famoso mel desta região.',
                    activity: {
                        icon: 'fa-seedling',
                        title: 'APICULTURA',
                        description: 'A apicultura em Trás-os-Montes beneficia de uma paisagem rica e diversa, essencial para a produção de mel de alta qualidade. Os apicultores da região, como Rui, seguem práticas tradicionais, respeitando o ritmo natural e contribuindo para a preservação do ecossistema local.'
                    },
                    production: {
                        icon: 'fa-jar',
                        title: 'PRODUÇÃO DE MEL',
                        description: 'A produção de mel é realizada de forma artesanal, preservando as suas características naturais, desde a colheita até ao envase. Cada frasco traduz um novo dia do ano e provém, com sabores influenciados pela flora característica de Trás-os-Montes.'
                    },
                    products: [
                        {
                            name: 'MEL DO BÓ',
                            producer: 'Produtor Rui Lourenço',
                            price: '4,95€',
                            image: 'http://localhost/AlmaNorte/assets/images/MEL.jpeg'
                        },
                        {
                            name: 'MEL DO BÓ',
                            producer: 'Produtor Rui Lourenço',
                            price: '4,95€',
                            image: 'http://localhost/AlmaNorte/assets/images/MEL.jpeg'
                        },
                        {
                            name: 'MEL DO BÓ',
                            producer: 'Produtor Rui Lourenço',
                            price: '4,95€',
                            image: 'http://localhost/AlmaNorte/assets/images/MEL.jpeg'
                        }
                    ]
                }
            };
            
            // Load producer data
            const producer = producersData[producerName] || producersData['RUI LOURENÇO'];
            
            // Update page
            document.getElementById('producer-name').textContent = producer.name;
            document.querySelector('.producer-hero-subtitle').textContent = producer.subtitle;
            document.getElementById('producer-hero').style.backgroundImage = `url('${producer.heroImage}')`;
            document.getElementById('about-title').textContent = producer.name;
            document.getElementById('about-description').textContent = producer.about;
            
            // Render products
            const productsContainer = document.getElementById('producer-products');
            productsContainer.innerHTML = producer.products.map(product => `
                <div class="producer-product-card">
                    <div class="producer-product-image">
                        <img src="${product.image}" alt="${product.name}">
                    </div>
                    <div class="producer-product-info">
                        <div class="producer-product-name">${product.name}</div>
                        <div class="producer-product-producer">${product.producer}</div>
                        <div class="producer-product-price">${product.price}</div>
                        <button class="producer-product-button">Adicionar ao Carrinho</button>
                    </div>
                </div>
            `).join('');
        </script>
