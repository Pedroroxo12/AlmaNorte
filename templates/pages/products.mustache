    { name: "VINHO TROVISCO", producer: "Produtor ..", price: "45,95€", image: "/assets/images/vinhos.jpeg" },
    { name: "QUEIJO DE CABRA", producer: "Produtor ..", price: "9,95€", image: "/assets/images/Queijo.jpeg" },
    { name: "MEL ARTESANAL", producer: "Produtor ..", price: "8,95€", image: "/assets/images/MEL.jpeg" },
    { name: "VINHO TROVISCO", producer: "Produtor ..", price: "45,95€", image: "/assets/images/vinhos.jpeg" },
    { name: "QUEIJO ARTESANAL", producer: "Produtor ..", price: "9,95€", image: "/assets/images/Queijo.jpeg" },
    { name: "VINHO TROVISCO", producer: "Produtor ..", price: "45,95€", image: "/assets/images/vinhos.jpeg" },
    { name: "VINHO TROVISCO", producer: "Produtor ..", price: "45,95€", image: "/assets/images/vinhos.jpeg" }
  ];

  function renderGrid(id, list) {
    const node = document.getElementById(id);
    if (!node) return;
    node.innerHTML = list.map(item => `
      <div class="product-card">
        <div class="product-image">
          <img src="http://localhost/AlmaNorte${item.image}" alt="${item.name}">
          <span class="icon-badge"><i class="far fa-heart"></i></span>
        </div>
        <div class="product-info">
          <h3>${item.name}</h3>
          <p class="producer">${item.producer}</p>
          <p class="price">${item.price}</p>
        </div>
      </div>
    `).join('');
  }

  renderGrid('featured-grid', featuredProducts);
  renderGrid('catalog-grid', catalogProducts);
</script>
{{/main}}
