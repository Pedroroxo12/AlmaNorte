  }

  let currentCategory = 'all';
  let currentPage = 1;
  let allCatalogProducts = [...catalogProducts];
  const itemsPerPage = 8;

  // Função para embaralhar array (Fisher-Yates shuffle)
  function shuffleArray(array) {
    const shuffled = [...array];
    for (let i = shuffled.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    return shuffled;
  }

  function getFilteredProducts() {
    if (currentCategory === 'all') {
      return allCatalogProducts;
    } else {
      return allCatalogProducts.filter(product => slugify(product.category) === currentCategory);
    }
  }

  function getPaginatedProducts() {
    const filtered = getFilteredProducts();
    const totalPages = Math.ceil(filtered.length / itemsPerPage);
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;
    return {
      products: filtered.slice(startIndex, endIndex),
      totalPages: totalPages,
      filtered: filtered
    };
  }

  function updatePagination() {
    const { totalPages } = getPaginatedProducts();
    const paginationContainer = document.querySelector('.pagination');
    
    if (!paginationContainer) return;
    
    const prevDisabled = currentPage === 1 ? 'disabled' : '';
    const nextDisabled = currentPage === totalPages ? 'disabled' : '';
    
    let paginationHTML = `<button class="arrow" onclick="previousPage()" ${prevDisabled}><i class="fas fa-chevron-left"></i></button>`;
    paginationHTML += '<div class="page-numbers">';
    
    for (let i = 1; i <= totalPages; i++) {
      const activeClass = i === currentPage ? 'active' : '';
      paginationHTML += `<button class="${activeClass}" onclick="goToPage(event, ${i})">${i}</button>`;
    }
    
    paginationHTML += '</div>';
    paginationHTML += `<button class="arrow" onclick="nextPage()" ${nextDisabled}><i class="fas fa-chevron-right"></i></button>`;
    
    paginationContainer.innerHTML = paginationHTML;
  }

  function renderCurrentPage() {
    const { products } = getPaginatedProducts();
    // Embaralha produtos antes de renderizar
    const shuffledProducts = shuffleArray(products);
    renderCatalogGrid(shuffledProducts);
    updatePagination();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  function filterByCategory(event, cat) {
    const buttons = document.querySelectorAll('.category-pills button');
    buttons.forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');
    
    currentCategory = cat;
    currentPage = 1; // Reset to first page when filtering
    renderCurrentPage();
  }

  function goToPage(event, page) {
    currentPage = page;
    renderCurrentPage();
  }

  function previousPage() {
    if (currentPage > 1) {
      currentPage--;
      renderCurrentPage();
    }
  }

  function nextPage() {
    const { totalPages } = getPaginatedProducts();
    if (currentPage < totalPages) {
      currentPage++;
      renderCurrentPage();
    }
  }

  renderFeaturedGrid(featuredProducts);
  renderCurrentPage();
