<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600&family=Montserrat:wght@400;500;600&display=swap');

  .products-page {
    font-family: 'Montserrat', sans-serif;
    color: #2d1c1c;
    background: #ffffff;
    padding-top: 160px;
  }

  .container-products {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .products-hero {
    position: relative;
    background: #593232;
    color: #fff;
    padding: 70px 0 140px;
    overflow: hidden;
  }

  .products-hero h1 {
    font-family: 'Playfair Display', serif;
    font-size: 40px;
    letter-spacing: 1px;
    margin-bottom: 15px;
  }

  .products-hero p {
    max-width: 720px;
    line-height: 1.6;
    font-size: 13px;
    color: #f5e9e9;
  }

  .category-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 28px;
  }

  .category-pills button {
    padding: 10px 18px;
    border: 1px solid #d3c6c6;
    background: transparent;
    color: #f5e9e9;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-pills button:hover {
    background: #ffffff;
    color: #593232;
  }

  .wave-divider {
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 120px;
    overflow: hidden;
    line-height: 0;
  }

  .wave-divider svg {
    position: relative;
    display: block;
    width: calc(120% + 1.3px);
    height: 120px;
  }

  .wave-divider .shape-fill {
    fill: #ffffff;
  }

  .products-section {
    padding: 60px 0 40px;
    background: #ffffff;
  }

  .section-heading {
    font-family: 'Playfair Display', serif;
    font-size: 26px;
    margin-bottom: 24px;
    letter-spacing: 0.5px;
    color: #2d1c1c;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 30px 22px;
  }

  .product-card {
    border: 1px solid #dcd4d4;
    padding: 10px 10px 16px;
    background: #fff;
    position: relative;
    min-height: 280px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .product-image {
    position: relative;
    background: #f8f4f4;
    border: 1px solid #e6dede;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 18px;
    min-height: 160px;
  }

  .product-image img {
    max-height: 150px;
    width: auto;
    object-fit: contain;
  }

  .icon-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 1px solid #d3c6c6;
    background: #fefefe;
    display: grid;
    place-items: center;
    color: #6d5b5b;
    font-size: 13px;
  }

  .product-info h3 {
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.2px;
    margin-bottom: 4px;
    color: #2d1c1c;
  }

  .product-info .producer {
    font-size: 11px;
    color: #6d5b5b;
    margin-bottom: 6px;
  }

  .product-info .price {
    font-size: 13px;
    font-weight: 600;
    color: #2d1c1c;
  }

  .filter-bar {
    background: #ffffff;
    border-top: 1px solid #e5dddd;
    border-bottom: 1px solid #e5dddd;
    padding: 16px 0;
  }

  .filter-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
    font-size: 13px;
    letter-spacing: 0.5px;
  }

  .filter-label {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-transform: uppercase;
    color: #2d1c1c;
    font-weight: 600;
  }

  .filter-hint {
    text-transform: uppercase;
    color: #2d1c1c;
    font-weight: 600;
  }

  .filter-select {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: #6d5b5b;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .products-page {
      padding-top: 130px;
    }
    .products-hero h1 {
      font-size: 32px;
    }
    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }
</style>

<div class="products-page">
  <section class="products-hero">
    <div class="container-products">
      <h1>OS NOSSOS PRODUTOS</h1>
      <p>DESCUBRA PRODUTOS TRADICIONAIS PORTUGUESES AUTÊNTICOS. CADA PRODUTO CONTA UMA HISTÓRIA DE TRADIÇÃO E QUALIDADE.</p>
      <div class="category-pills">
        <button>Azeite</button>
        <button>Vinho</button>
        <button>Queijo</button>
        <button>Mel</button>
        <button>Fumeiro</button>
        <button>Doçaria</button>
        <button>Ervas Aromáticas</button>
      </div>
    </div>
    <div class="wave-divider" aria-hidden="true">
      <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M985.66,92.83C906.67,72,823.78,31.35,743.45,14.19c-82.26-17.76-168.06-16.17-250.45.39-86.27,17.37-172.1,51.16-258.4,69.66C157.68,102.88,79.4,102.92,0,88.86V0H1200V27.35C1115.6,60.79,1047.47,108.36,985.66,92.83Z" class="shape-fill"></path>
      </svg>
    </div>
  </section>

  <section class="products-section">
    <div class="container-products">
      <h2 class="section-heading">EM DESTAQUE</h2>
      <div class="products-grid" id="featured-grid"></div>
    </div>
  </section>

  <section class="filter-bar">
    <div class="container-products filter-inner">
      <span class="filter-label"><i class="fas fa-sliders-h"></i> Filtros</span>
      <span class="filter-hint">ORDENADO POR: <span class="filter-select">Recomendado <i class="fas fa-chevron-down"></i></span></span>
    </div>
  </section>

  <section class="products-section">
    <div class="container-products">
      <div class="products-grid" id="catalog-grid"></div>
    </div>
  </section>
</div>

